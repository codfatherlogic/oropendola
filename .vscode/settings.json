{
  // ================================
  // VS Code Settings for Oropendola AI Extension Development
  // ================================

  // Editor Settings
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.rulers": [100, 120],
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.inlineSuggest.enabled": true,

  // File Settings
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/out": true,
    "**/*.vsix": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/out/**": true
  },
  "files.associations": {
    "*.js": "javascript",
    "*.json": "jsonc"
  },

  // JavaScript/Node.js Settings
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "javascript.suggest.names": true,
  "javascript.suggest.paths": true,
  "javascript.format.enable": true,
  "javascript.validate.enable": true,

  // ESLint Settings
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact"
  ],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],

  // Prettier Settings
  "prettier.enable": true,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "none",
  "prettier.semi": true,
  "prettier.tabWidth": 2,
  "prettier.printWidth": 100,
  "prettier.arrowParens": "avoid",

  // Search Settings
  "search.exclude": {
    "**/node_modules": true,
    "**/out": true,
    "**/*.vsix": true,
    "**/test-results": true,
    "**/.vscode-test": true
  },

  // Git Settings
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.decorations.enabled": true,

  // Terminal Settings
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "Monaco, 'Courier New', monospace",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.scrollback": 10000,

  // Extension Development Specific
  "debug.javascript.autoAttachFilter": "onlyWithFlag",
  "debug.javascript.breakOnConditionalError": true,
  "debug.internalConsoleOptions": "neverOpen",
  "debug.node.autoAttach": "on",

  // Testing
  "mochaExplorer.files": "test/**/*.test.js",
  "mochaExplorer.require": [],
  "mochaExplorer.env": {
    "NODE_ENV": "test"
  },

  // Markdown
  "markdown.preview.fontSize": 14,
  "markdown.preview.lineHeight": 1.6,

  // Problems View
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,

  // NPM Scripts
  "npm.packageManager": "npm",
  "npm.enableScriptExplorer": true,

  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // Workbench
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "vs-seti",
  "workbench.tree.indent": 20,
  "workbench.startupEditor": "readme",

  // VS Code Extension Development
  "vscode-extension-tester.enableLogging": true,
  "vscode-extension-tester.extensionDevelopmentPath": "${workspaceFolder}",

  // Code Spell Checker (if installed)
  "cSpell.words": [
    "oropendola",
    "deepseek",
    "gemini",
    "claude",
    "frappe",
    "erpnext",
    "webview",
    "doctype",
    "todos",
    "axios",
    "vscode",
    "statusbar",
    "autocomplete",
    "chatbot",
    "realtime"
  ]
}
