    "configuration": {
      "title": "Oropendola AI",
      "properties": {
        "oropendola.api.url": {
          "type": "string",
          "default": "https://oropendola.ai",
          "description": "Oropendola API base URL (HTTPS on port 443)",
          "scope": "application"
        },
        "oropendola.api.key": {
          "type": "string",
          "default": "",
          "description": "Your Oropendola API key from oropendola.ai",
          "scope": "application"
        },
        "oropendola.api.secret": {
          "type": "string",
          "default": "",
          "description": "Your Oropendola API secret from oropendola.ai",
          "scope": "application"
        },
        "oropendola.user.email": {
          "type": "string",
          "default": "",
          "description": "Your Oropendola account email",
          "scope": "application"
        },
        "oropendola.user.token": {
          "type": "string",
          "default": "",
          "description": "Your Oropendola session token (automatically set after login)",
          "scope": "application"
        },
        "oropendola.ai.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Controls creativity (0.0 = focused, 2.0 = creative)"
        },
        "oropendola.ai.maxTokens": {
          "type": "number",
          "default": 4096,
          "description": "Maximum response length in tokens"
        },
        "oropendola.github.token": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token for repository operations",
          "scope": "application"
        },
        "oropendola.github.defaultOrg": {
          "type": "string",
          "default": "",
          "description": "Default organization for forked repositories"
        },
        "oropendola.analysis.autoAnalyze": {
          "type": "boolean",
          "default": true,
          "description": "Automatically analyze repositories when forked"
        },
        "oropendola.analysis.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules",
            ".git",
            "dist",
            "build",
            "out",
            "vendor",
            ".vscode",
            "*.min.js"
          ],
          "description": "Patterns to exclude from repository analysis"
        },
        "oropendola.chat.historySize": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of chat messages to keep in history"
        },
        "oropendola.session.cookies": {
          "type": "string",
          "default": "",
          "description": "Session cookies (automatically managed - do not modify manually)",
          "scope": "application"
        },
        "oropendola.autocomplete.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered autocomplete suggestions"
        },
        "oropendola.autocomplete.debounceDelay": {
          "type": "number",
          "default": 200,
          "description": "Delay in milliseconds before triggering autocomplete"
        },
        "oropendola.edit.showDiffView": {
          "type": "boolean",
          "default": true,
          "description": "Show diff view when editing code with AI"
        },
        "oropendola.approval.mode": {
          "type": "string",
          "enum": [
            "manual",
            "auto-safe",
            "auto-all"
          ],
          "default": "manual",
          "description": "Approval mode for AI code changes",
          "enumDescriptions": [
            "Manual approval required for all changes",
            "Auto-accept safe changes (tests, docs, new files)",
            "Auto-accept all changes (use with caution!)"
          ]
        },
        "oropendola.approval.autoAcceptPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "*.test.js",
            "*.test.ts",
            "*.spec.js",
            "*.spec.ts",
            "*.md",
            "docs/**/*",
            "test/**/*",
            "tests/**/*"
          ],
          "description": "File patterns to auto-accept (glob patterns)"
        },
        "oropendola.approval.requireManualPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "package.json",
            "package-lock.json",
            "yarn.lock",
            "*.config.js",
            "*.config.ts",
            ".env*",
            "*.key",
            "*.pem",
            "*.crt",
            "Dockerfile",
            "docker-compose.yml"
          ],
          "description": "File patterns that always require manual approval (security-sensitive files)"
        },
        "oropendola.serverUrl": {
          "type": "string",
          "default": "https://oropendola.ai",
          "description": "Oropendola backend server URL",
          "scope": "application"
        },
        "oropendola.auth.autoLogin": {
          "type": "boolean",
          "default": false,
          "description": "Automatically login on extension activation"
        },
        "oropendola.auth.rememberCredentials": {
          "type": "boolean",
          "default": true,
          "description": "Remember credentials in system keychain"
        },
        "oropendola.inlineCompletions.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copilot-style inline code completions"
        },
        "oropendola.inlineCompletions.delay": {
          "type": "number",
          "default": 75,
          "minimum": 50,
          "maximum": 1000,
          "description": "Debounce delay for inline completions (milliseconds)"
        },
        "oropendola.inlineCompletions.maxSuggestions": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum number of inline completion suggestions"
        },
        "oropendola.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered code diagnostics"
        },
        "oropendola.diagnostics.runOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run diagnostics automatically when files are saved"
        },
        "oropendola.telemetry.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable telemetry and usage analytics"
        },
        "oropendola.indexing.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable workspace indexing for better AI context"
        },
        "oropendola.indexing.onStartup": {
          "type": "boolean",
          "default": false,
          "description": "Index workspace automatically on extension startup"
        },
        "oropendola.indexing.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/node_modules/**",
            "**/.git/**",
            "**/__pycache__/**",
            "**/dist/**",
            "**/build/**"
          ],
          "description": "Glob patterns to exclude from workspace indexing"
        },
        "oropendola.chat.model": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "claude",
            "claude-3-5-sonnet-20241022",
            "claude-3-5-haiku-20241022",
            "deepseek",
            "deepseek-chat",
            "deepseek-reasoner",
            "gemini",
            "gemini-2.0-flash-exp",
            "gemini-1.5-pro",
            "gpt",
            "gpt-4o",
            "gpt-4-turbo",
            "local",
            "qwen2.5-coder:32b"
          ],
          "markdownDescription": "AI model selection:\n- **auto**: Backend auto-selects best model\n- **claude**: Claude Sonnet 4.5 (best for complex tasks)\n- **deepseek**: DeepSeek (fast, cost-effective)\n- **gemini**: Gemini 2.0 Flash (free, fast)\n- **gpt**: GPT-4o (general purpose)\n- **local**: Qwen 2.5 Coder (offline, privacy-first)"
