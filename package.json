{
  "name": "oropendola-ai-assistant",
  "displayName": "Oropendola AI Assistant",
  "description": "AI-powered assistant - v3.0.0: Phase 1-5 complete - Inline editing + Smart reports + Auto permissions",
  "version": "3.0.0",
  "publisher": "oropendola",
  "repository": {
    "type": "git",
    "url": "https://github.com/codfatherlogic/oropendola-ai"
  },
  "bugs": {
    "url": "https://oropendola.ai/support"
  },
  "homepage": "https://oropendola.ai",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "AI",
    "Chat",
    "SCM Providers",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "ai",
    "chat",
    "github",
    "fork",
    "repository",
    "code-analysis",
    "assistant"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "oropendola.test",
        "title": "Test Extension",
        "category": "Oropendola",
        "icon": "$(heart)"
      },
      {
        "command": "oropendola.login",
        "title": "Sign In",
        "category": "Oropendola",
        "icon": "$(sign-in)"
      },
      {
        "command": "oropendola.logout",
        "title": "Sign Out",
        "category": "Oropendola",
        "icon": "$(sign-out)"
      },
      {
        "command": "oropendola.setup",
        "title": "Setup",
        "category": "Oropendola",
        "icon": "$(gear)"
      },
      {
        "command": "oropendola.openChat",
        "title": "Chat",
        "category": "Oropendola",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "oropendola.checkSubscription",
        "title": "Check Subscription",
        "category": "Oropendola",
        "icon": "$(info)"
      },
      {
        "command": "oropendola.forkRepository",
        "title": "Fork Repository",
        "category": "Oropendola",
        "icon": "$(repo-forked)"
      },
      {
        "command": "oropendola.analyzeCode",
        "title": "Analyze Code",
        "category": "Oropendola",
        "icon": "$(graph)"
      },
      {
        "command": "oropendola.reviewCode",
        "title": "Review Code",
        "category": "Oropendola",
        "icon": "$(check)"
      },
      {
        "command": "oropendola.explainCode",
        "title": "Explain Code",
        "category": "Oropendola",
        "icon": "$(question)"
      },
      {
        "command": "oropendola.fixCode",
        "title": "Fix Code",
        "category": "Oropendola",
        "icon": "$(wrench)"
      },
      {
        "command": "oropendola.improveCode",
        "title": "Improve Code",
        "category": "Oropendola",
        "icon": "$(rocket)"
      },
      {
        "command": "oropendola.findSimilar",
        "title": "Find Similar Repositories",
        "category": "Oropendola",
        "icon": "$(search)"
      },
      {
        "command": "oropendola.listRepositories",
        "title": "List My Repositories",
        "category": "Oropendola",
        "icon": "$(repo)"
      },
      {
        "command": "oropendola.showShortcuts",
        "title": "Show Keyboard Shortcuts",
        "category": "Oropendola",
        "icon": "$(keyboard)"
      },
      {
        "command": "oropendola.editCode",
        "title": "Edit Code with AI",
        "category": "Oropendola",
        "icon": "$(edit)"
      },
      {
        "command": "oropendola.toggleAutocomplete",
        "title": "Toggle Autocomplete",
        "category": "Oropendola",
        "icon": "$(symbol-method)"
      },
      {
        "command": "oropendola.clearAutocompleteCache",
        "title": "Clear Autocomplete Cache",
        "category": "Oropendola",
        "icon": "$(clear-all)"
      },
      {
        "command": "oropendola.debugAutocomplete",
        "title": "Debug Autocomplete Status",
        "category": "Oropendola",
        "icon": "$(bug)"
      },
      {
        "command": "oropendola.enhancedLogin",
        "title": "Sign In (Enhanced)",
        "category": "Oropendola",
        "icon": "$(key)"
      },
      {
        "command": "oropendola.enhancedLogout",
        "title": "Sign Out (Enhanced)",
        "category": "Oropendola",
        "icon": "$(sign-out)"
      },
      {
        "command": "oropendola.indexWorkspace",
        "title": "Index Workspace",
        "category": "Oropendola",
        "icon": "$(database)"
      },
      {
        "command": "oropendola.openAIChat",
        "title": "Open AI Chat Panel",
        "category": "Oropendola",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "oropendola.runDiagnostics",
        "title": "Run AI Diagnostics",
        "category": "Oropendola",
        "icon": "$(check-all)"
      },
      {
        "command": "oropendola.clearDiagnostics",
        "title": "Clear Diagnostics",
        "category": "Oropendola",
        "icon": "$(clear-all)"
      },
      {
        "command": "oropendola.applyAIFix",
        "title": "Apply AI Fix",
        "category": "Oropendola",
        "icon": "$(lightbulb-autofix)"
      },
      {
        "command": "oropendola.refactorCode",
        "title": "Refactor with AI",
        "category": "Oropendola",
        "icon": "$(sync)"
      },
      {
        "command": "oropendola.optimizeCode",
        "title": "Optimize Code with AI",
        "category": "Oropendola",
        "icon": "$(zap)"
      },
      {
        "command": "oropendola.generateDocs",
        "title": "Generate Documentation",
        "category": "Oropendola",
        "icon": "$(book)"
      },
      {
        "command": "oropendola.openSettings",
        "title": "Open Settings",
        "category": "Oropendola",
        "icon": "$(settings-gear)"
      },
      {
        "command": "oropendola.showTodos",
        "title": "Show Todos",
        "category": "Oropendola",
        "icon": "$(checklist)"
      },
      {
        "command": "oropendola.showAnalytics",
        "title": "Show Usage Analytics",
        "category": "Oropendola",
        "icon": "$(graph)"
      },
      {
        "command": "oropendola.showConversations",
        "title": "Show Conversation History",
        "category": "Oropendola",
        "icon": "$(history)"
      },
      {
        "command": "oropendola.testBackend",
        "title": "Test Backend Connection",
        "category": "Oropendola",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "oropendola.extractTodos",
        "title": "Extract Todos from Selection",
        "category": "Oropendola",
        "icon": "$(list-selection)"
      },
      {
        "command": "oropendola.selectModel",
        "title": "Select AI Model",
        "category": "Oropendola",
        "icon": "$(server-process)"
      }
    ],
    "views": {
      "oropendola-sidebar": [
        {
          "id": "oropendola.chatView",
          "name": "Chat",
          "type": "webview",
          "contextualTitle": "Oropendola AI Chat"
        }
      ],
      "explorer": [
        {
          "id": "oropendola-repositories",
          "name": "Oropendola Repositories",
          "when": "oropendola.enabled"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "oropendola-sidebar",
          "title": "Oropendola AI",
          "icon": "media/icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "Oropendola AI",
      "properties": {
        "oropendola.api.url": {
          "type": "string",
          "default": "https://oropendola.ai",
          "description": "Oropendola API base URL (HTTPS on port 443)",
          "scope": "application"
        },
        "oropendola.api.key": {
          "type": "string",
          "default": "",
          "description": "Your Oropendola API key from oropendola.ai",
          "scope": "application"
        },
        "oropendola.api.secret": {
          "type": "string",
          "default": "",
          "description": "Your Oropendola API secret from oropendola.ai",
          "scope": "application"
        },
        "oropendola.user.email": {
          "type": "string",
          "default": "",
          "description": "Your Oropendola account email",
          "scope": "application"
        },
        "oropendola.user.token": {
          "type": "string",
          "default": "",
          "description": "Your Oropendola session token (automatically set after login)",
          "scope": "application"
        },
        "oropendola.ai.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Controls creativity (0.0 = focused, 2.0 = creative)"
        },
        "oropendola.ai.maxTokens": {
          "type": "number",
          "default": 4096,
          "description": "Maximum response length in tokens"
        },
        "oropendola.github.token": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token for repository operations",
          "scope": "application"
        },
        "oropendola.github.defaultOrg": {
          "type": "string",
          "default": "",
          "description": "Default organization for forked repositories"
        },
        "oropendola.analysis.autoAnalyze": {
          "type": "boolean",
          "default": true,
          "description": "Automatically analyze repositories when forked"
        },
        "oropendola.analysis.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules",
            ".git",
            "dist",
            "build",
            "out",
            "vendor",
            ".vscode",
            "*.min.js"
          ],
          "description": "Patterns to exclude from repository analysis"
        },
        "oropendola.chat.historySize": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of chat messages to keep in history"
        },
        "oropendola.session.cookies": {
          "type": "string",
          "default": "",
          "description": "Session cookies (automatically managed - do not modify manually)",
          "scope": "application"
        },
        "oropendola.autocomplete.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered autocomplete suggestions"
        },
        "oropendola.autocomplete.debounceDelay": {
          "type": "number",
          "default": 200,
          "description": "Delay in milliseconds before triggering autocomplete"
        },
        "oropendola.edit.showDiffView": {
          "type": "boolean",
          "default": true,
          "description": "Show diff view when editing code with AI"
        },
        "oropendola.approval.mode": {
          "type": "string",
          "enum": ["manual", "auto-safe", "auto-all"],
          "default": "manual",
          "description": "Approval mode for AI code changes",
          "enumDescriptions": [
            "Manual approval required for all changes",
            "Auto-accept safe changes (tests, docs, new files)",
            "Auto-accept all changes (use with caution!)"
          ]
        },
        "oropendola.approval.autoAcceptPatterns": {
          "type": "array",
          "items": {"type": "string"},
          "default": [
            "*.test.js",
            "*.test.ts",
            "*.spec.js",
            "*.spec.ts",
            "*.md",
            "docs/**/*",
            "test/**/*",
            "tests/**/*"
          ],
          "description": "File patterns to auto-accept (glob patterns)"
        },
        "oropendola.approval.requireManualPatterns": {
          "type": "array",
          "items": {"type": "string"},
          "default": [
            "package.json",
            "package-lock.json",
            "yarn.lock",
            "*.config.js",
            "*.config.ts",
            ".env*",
            "*.key",
            "*.pem",
            "*.crt",
            "Dockerfile",
            "docker-compose.yml"
          ],
          "description": "File patterns that always require manual approval (security-sensitive files)"
        },
        "oropendola.serverUrl": {
          "type": "string",
          "default": "https://oropendola.ai",
          "description": "Oropendola backend server URL",
          "scope": "application"
        },
        "oropendola.auth.autoLogin": {
          "type": "boolean",
          "default": false,
          "description": "Automatically login on extension activation"
        },
        "oropendola.auth.rememberCredentials": {
          "type": "boolean",
          "default": true,
          "description": "Remember credentials in system keychain"
        },
        "oropendola.inlineCompletions.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Copilot-style inline code completions"
        },
        "oropendola.inlineCompletions.delay": {
          "type": "number",
          "default": 75,
          "minimum": 50,
          "maximum": 1000,
          "description": "Debounce delay for inline completions (milliseconds)"
        },
        "oropendola.inlineCompletions.maxSuggestions": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum number of inline completion suggestions"
        },
        "oropendola.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered code diagnostics"
        },
        "oropendola.diagnostics.runOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run diagnostics automatically when files are saved"
        },
        "oropendola.telemetry.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable telemetry and usage analytics"
        },
        "oropendola.indexing.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable workspace indexing for better AI context"
        },
        "oropendola.indexing.onStartup": {
          "type": "boolean",
          "default": false,
          "description": "Index workspace automatically on extension startup"
        },
        "oropendola.indexing.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/node_modules/**",
            "**/.git/**",
            "**/__pycache__/**",
            "**/dist/**",
            "**/build/**"
          ],
          "description": "Glob patterns to exclude from workspace indexing"
        },
        "oropendola.chat.model": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "claude",
            "claude-3-5-sonnet-20241022",
            "claude-3-5-haiku-20241022",
            "deepseek",
            "deepseek-chat",
            "deepseek-reasoner",
            "gemini",
            "gemini-2.0-flash-exp",
            "gemini-1.5-pro",
            "gpt",
            "gpt-4o",
            "gpt-4-turbo",
            "local",
            "qwen2.5-coder:32b"
          ],
          "markdownDescription": "AI model selection:\n- **auto**: Backend auto-selects best model\n- **claude**: Claude Sonnet 4.5 (best for complex tasks)\n- **deepseek**: DeepSeek (fast, cost-effective)\n- **gemini**: Gemini 2.0 Flash (free, fast)\n- **gpt**: GPT-4o (general purpose)\n- **local**: Qwen 2.5 Coder (offline, privacy-first)"
        },
        "oropendola.chat.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature for chat responses (higher = more creative)"
        },
        "oropendola.chat.maxTokens": {
          "type": "number",
          "default": 2000,
          "minimum": 100,
          "maximum": 8000,
          "description": "Maximum tokens for chat responses"
        },
        "oropendola.codeActions.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered code actions and quick fixes"
        },
        "oropendola.codeActions.autoFixOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically apply AI fixes when saving files"
        },
        "oropendola.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging"
        },
        "oropendola.chat.mode": {
          "type": "string",
          "default": "agent",
          "enum": [
            "chat",
            "agent",
            "code"
          ],
          "markdownDescription": "Interaction mode:\n- **chat**: Simple Q&A, no tool execution\n- **agent**: Full autonomy with tools (recommended)\n- **code**: Optimized for code generation"
        },
        "oropendola.chat.enableTodoExtraction": {
          "type": "boolean",
          "default": true,
          "description": "Automatically extract and create todos from AI responses"
        },
        "oropendola.chat.streamResponses": {
          "type": "boolean",
          "default": false,
          "description": "Enable streaming for real-time responses (WebSocket)"
        },
        "oropendola.analytics.showCost": {
          "type": "boolean",
          "default": true,
          "description": "Show API cost information in responses"
        },
        "oropendola.analytics.showTokenUsage": {
          "type": "boolean",
          "default": true,
          "description": "Show token usage statistics"
        },
        "oropendola.history.maxConversations": {
          "type": "number",
          "default": 100,
          "description": "Maximum conversation history to keep"
        },
        "oropendola.history.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save conversations to backend"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "oropendola.setup",
          "when": "true"
        },
        {
          "command": "oropendola.openChat",
          "when": "true"
        },
        {
          "command": "oropendola.checkSubscription",
          "when": "true"
        },
        {
          "command": "oropendola.forkRepository",
          "when": "true"
        },
        {
          "command": "oropendola.analyzeCode",
          "when": "editorIsOpen"
        },
        {
          "command": "oropendola.reviewCode",
          "when": "editorIsOpen"
        },
        {
          "command": "oropendola.explainCode",
          "when": "editorHasSelection"
        },
        {
          "command": "oropendola.fixCode",
          "when": "editorHasSelection"
        },
        {
          "command": "oropendola.improveCode",
          "when": "editorHasSelection"
        },
        {
          "command": "oropendola.editCode",
          "when": "editorHasSelection"
        },
        {
          "command": "oropendola.toggleAutocomplete",
          "when": "true"
        }
      ],
      "editor/context": [
        {
          "command": "oropendola.editCode",
          "when": "editorHasSelection",
          "group": "oropendola@0"
        },
        {
          "command": "oropendola.explainCode",
          "when": "editorHasSelection",
          "group": "oropendola@1"
        },
        {
          "command": "oropendola.fixCode",
          "when": "editorHasSelection",
          "group": "oropendola@2"
        },
        {
          "command": "oropendola.improveCode",
          "when": "editorHasSelection",
          "group": "oropendola@3"
        },
        {
          "command": "oropendola.analyzeCode",
          "when": "editorIsOpen",
          "group": "oropendola@4"
        },
        {
          "command": "oropendola.reviewCode",
          "when": "editorIsOpen",
          "group": "oropendola@5"
        }
      ]
    },
    "keybindings": [
      {
        "command": "oropendola.test",
        "key": "cmd+shift+t",
        "mac": "cmd+shift+t",
        "win": "ctrl+shift+t",
        "linux": "ctrl+shift+t"
      },
      {
        "command": "oropendola.login",
        "key": "cmd+shift+l",
        "mac": "cmd+shift+l",
        "win": "ctrl+shift+l",
        "linux": "ctrl+shift+l"
      },
      {
        "command": "oropendola.openChat",
        "key": "cmd+l",
        "mac": "cmd+l",
        "win": "ctrl+l",
        "linux": "ctrl+l",
        "when": "editorFocus"
      },
      {
        "command": "oropendola.editCode",
        "key": "cmd+i",
        "mac": "cmd+i",
        "win": "ctrl+i",
        "linux": "ctrl+i",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "oropendola.explainCode",
        "key": "cmd+shift+e",
        "mac": "cmd+shift+e",
        "win": "ctrl+shift+e",
        "linux": "ctrl+shift+e",
        "when": "editorHasSelection"
      },
      {
        "command": "oropendola.fixCode",
        "key": "cmd+shift+f",
        "mac": "cmd+shift+f",
        "win": "ctrl+shift+f",
        "linux": "ctrl+shift+f",
        "when": "editorHasSelection"
      },
      {
        "command": "oropendola.improveCode",
        "key": "cmd+shift+i",
        "mac": "cmd+shift+i",
        "win": "ctrl+shift+i",
        "linux": "ctrl+shift+i",
        "when": "editorHasSelection"
      },
      {
        "command": "oropendola.showShortcuts",
        "key": "cmd+shift+h",
        "mac": "cmd+shift+h",
        "win": "ctrl+shift+h",
        "linux": "ctrl+shift+h"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "vscode:prepublish": "echo 'Skipping lint for now'",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "axios": "^1.6.2",
    "minimatch": "^9.0.5",
    "simple-git": "^3.21.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "sharp": "^0.34.4"
  },
  "icon": "media/icon.png",
  "license": "MIT"
}
